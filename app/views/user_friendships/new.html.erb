<p id="notice"><%= notice %></p>
<% if @friend %>
<h1><%= @friend.full_name %></h1>
<p>So you wanna be friends with <%= @friend.full_name %>?</p>
<%= form_for @user_friendship, method: :post do |form| %>
<div class="form form-actions">
  <%= form.hidden_field :friend_id, value: @friend.profile_name %>
  <%= submit_tag "Yes, Add Friend", class: 'btn btn-success' %>
  <%= link_to "Cancel", profile_path(@friend), class: 'btn btn-default' %>
</div>
<% end %>
<% end %>